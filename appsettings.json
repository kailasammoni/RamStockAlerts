{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=ramstockalerts.db",
    "PostgreSQL": "Host=localhost;Database=ramstockalerts;Username=postgres;Password="
  },
  "UsePostgreSQL": false,
  "ApplicationInsights": {
    "ConnectionString": ""
  },
  "EventStore": {
    "FilePath": "events.jsonl"
  },
  "Polygon": {
    "ApiKey": "",
    "Tickers": [
      "AAPL",
      "MSFT",
      "GOOGL",
      "AMZN"
    ],
    "QuotaPerMinute": 5,
    "QuotaPerDay": 100,
    "PollIntervalSeconds": 60
  },
  "Discord": {
    "WebhookUrl": ""
  },
  "TradingMode": "Shadow",
  "Preview": {
    "Enabled": true,
    "MinScore": 5.0,
    "MaxSignalsPerMinute": 30,
    "PerSymbolCooldownSeconds": 0,
    "RequireBookValid": true,
    "RequireTapeRecent": false,
    "DiscordEnabled": true,
    "DiscordChannelTag": "PREVIEW"
  },
  "AlertsEnabled": false,
  "RecordBlueprints": true,
  "ShadowTradeJournal": {
    "FilePath": "logs/shadow-trade-journal.jsonl"
  },
  "Report": {
    "DailyRollup": false,
    "JournalPath": "",
    "WriteToFile": false,
    "OutputPath": ""
  },
  "Scarcity": {
    "MaxBlueprintsPerDay": 6,
    "MaxPerSymbolPerDay": 1,
    "GlobalCooldownMinutes": 45,
    "SymbolCooldownMinutes": 9999,
    "RankWindowSeconds": 0
  },
  "Twilio": {
    "AccountSid": "",
    "AuthToken": "",
    "FromPhoneNumber": "",
    "ToPhoneNumber": ""
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "Username": "",
    "Password": "",
    "FromEmail": "",
    "ToEmail": ""
  },
  "Universe": {
    "Source": "IbkrScanner",
    "StaticTickers": [
      "AAPL",
      "MSFT",
      "GOOGL",
      "AMZN"
    ],
    "ExcludeEtfs": true,
    "EtfDenylist": [
      "TZA",
      "DUST",
      "BITO",
      "TSLL"
    ],
    "Scanner": {
      "MaxRetries": 3
    },
    "IbkrScanner": {
      "Instrument": "STK",
      "LocationCode": "STK.US.MAJOR",
      "ScanCode": "SCAN_floatShares_ASC",
      "Rows": 200,
      "AbovePrice": 5,
      "BelowPrice": 20,
      "AboveVolume": 500000,
      "FloatSharesBelow": 150000000
    },
    "MinPrice": 10,
    "MaxPrice": 80,
    "MinRelativeVolume": 2,
    "MaxSpread": 0.05,
    "MaxFloat": 150000000,
    "MaxTickers": 50,
    "UseStaticTickers": false,
    "RebuildIntervalHours": 24,
    "EnablePreMarketFiltering": true,
    "PreMarketStartHour": 7,
    "PreMarketMinTrades": 5,
    "MinVolumeYesterday": 500000,
    "MaxCandidates": 75,
    "MaxAlpacaSubscriptions": 30
  },
  "Alpaca": {
    "Key": "",
    "Secret": "",
    "StreamUrl": "wss://stream.data.alpaca.markets/v2/iex",
    "UsePaperTrading": true,
    "EnableAutoTrading": false,
    "MaxPositionSize": 100,
    "MinScoreForAutoTrade": 8.5,
    "TapeWindowSeconds": 3,
    "ZScoreThreshold": 2.0,
    "VwapHoldSeconds": 5,
    "VwapHoldPrints": 10,
    "PingIntervalSeconds": 30,
    "PongTimeoutSeconds": 10
  },
  "IBKR": {
    "Enabled": true,
    "Host": "127.0.0.1",
    "Port": 7496,
    "ClientId": 1,
    "MaxSymbols": 5
  },
  "MarketData": {
    "MaxLines": 80,
    "DepthRows": 10,
    "EnableDepth": true,
    "EnableTape": true,
    "MinHoldMinutes": 5,
    "TickByTickMaxSymbols": 5
  }
