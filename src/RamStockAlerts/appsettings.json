{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",

      "RamStockAlerts.Services.Reporting": "Debug",
      "RamStockAlerts.Services.Signals.TradeJournalHeartbeatService": "Debug",
      "RamStockAlerts.Services.DiscordNotificationService": "Warning",

      "RamStockAlerts.Feeds.IBkrMarketDataClient": "Information",
      "RamStockAlerts.Services.MarketDataSubscriptionManager": "Information",
      "RamStockAlerts.Execution.Services.OrderStateTracker": "Information"
    }
  },
  "AllowedHosts": "*",
  "ApplicationInsights": {
    "ConnectionString": ""
  },
  "Discord": {
    "Enabled": true,
    "ChannelTag": "ALERTS",
    "WebhookUrl": "",
    "CompactAlertFields": true
  },
  "Preview": {
    "Enabled": true,
    "MinScore": 5.0,
    "MaxSignalsPerMinute": 30,
    "PerSymbolCooldownSeconds": 0,
    "DedupWindowSeconds": 15,
    "RequireBookValid": true,
    "RequireTapeRecent": false,
    "DiscordEnabled": false,
    "DiscordChannelTag": "PREVIEW"
  },
  "RecordBlueprints": true,
  "Signals": {
    "GatingRejectSuppressionSeconds": 10,
    "HardGates": {
      "MaxSpoofScore": 0.3,
      "MinTapeAcceleration": 2.0,
      "MinWallPersistenceMs": 1000
    },
    "CooldownBypassScore": 90,
    "PostSignalMonitoringEnabled": true,
    "SpreadBlowoutThreshold": 0.5,
    "TapeSlowdownThreshold": 0.5,
    "PostSignalConsecutiveThreshold": 3,
    "PostSignalMaxAgeMs": 300000
  },
  "SignalsJournal": {
    "FilePath": "logs/trade-journal.jsonl",
    "EmitGateTrace": true
  },
  "Report": {
    "DailyRollup": true,
    "JournalPath": "",
    "WriteToFile": true,
    "OutputPath": ""
  },
  "Monitoring": {
    "Enabled": true,
    "PollIntervalSeconds": 15,
    "SummaryLogIntervalSeconds": 60,
    "HeartbeatStaleThresholdSeconds": 120,
    "TradeJournalPath": "logs/trade-journal.jsonl",
    "ExecutionLedgerPath": "logs/execution-ledger.jsonl",
    "LogGlob": "logs/ramstockalerts-*.txt",
    "OutputPath": "logs/market-hours-status.jsonl"
  },
  "Diagnostics": {},
  "Scarcity": {
    "MaxBlueprintsPerDay": 15,
    "MaxPerSymbolPerDay": 3,
    "GlobalCooldownMinutes": 2,
    "CancelledCooldownMinutes": 2,
    "PerSymbolCooldownMinutes": 60,
    "RankWindowSeconds": 0
  },
  "Universe": {
    "Source": "IbkrScanner",
    "StaticTickers": [
      "AAPL",
      "MSFT",
      "GOOGL",
      "AMZN"
    ],
    "ExcludeEtfs": true,
    "EtfDenylist": [
      "TZA",
      "DUST",
      "BITO",
      "TSLL"
    ],
    "Scanner": {
      "MaxRetries": 3
    },
    "IbkrScanner": {
      "Instrument": "STK",
      "LocationCode": "STK.US.MAJOR",
      "ScanCodes": [
        "TOP_PERC_GAIN",
        "HOT_BY_VOLUME",
        "MOST_ACTIVE"
      ],
      "Rows": 50,
      "AbovePrice": 2,
      "BelowPrice": 50,
      "AboveVolume": 750000,
      "FloatSharesBelow": 50000000
    },
    "MaxActiveSymbols": 25,
    "MinPrice": 2,
    "MaxPrice": 50,
    "MaxSpread": 0.05,
    "MaxTickers": 50,
    "UseStaticTickers": false,
    "RebuildIntervalHours": 0.5
  },
  "IBKR": {
    "Enabled": true,
    "Host": "127.0.0.1",
    "Port": 7497,
    "ClientId": 1
  },
  "MarketData": {
    "MaxLines": 80,
    "EnableDepth": true,
    "EnableTape": true,
    "MinHoldMinutes": 5,
    "TickByTickMaxSymbols": 6
  },
  "Execution": {
    "Enabled": true,
    "Live": false,
    "Ledger": {
      "Type": "Jsonl",
      "FilePath": "logs/execution-ledger.jsonl"
    },
    "AutoExecuteFromSignals": true,
    "AutoExecuteNotionalUsd": 5000,
    "KillSwitch": false,
    "MonitorOnly": false,
    "MaxOrdersPerDay": 50,
    "MaxBracketsPerDay": 25,
    "MaxOpenPositions": 10,
    "MaxNotionalPerTradePct": 4,
    "MaxLossPerDayUsd": 3500,
    "SymbolCooldownSeconds": 120,
    "MinSecondsBetweenOrders": 10,
    "Broker": "IBKR",
    "MaxNotionalUsd": 15000,
    "MaxShares": 3000
  }
}
